<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/grey</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <!--Text-->
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:fontFamily">@font/geosans_light</item>
        <item name="android:textStyle">bold</item>

        <item name="editTextStyle">@style/editTextStyle</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="editTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

</resources>
